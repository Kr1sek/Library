<Window x:Class="Library.Windows.BookWindows.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows.BookWindows"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="309.044" Width="250">
    <Grid Margin="0,0,0,-1">

        <Label Content="ReaderID" HorizontalAlignment="Left" Margin="16,14,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ReaderID" HorizontalAlignment="Left" Height="23" Margin="98,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="AuthorID" HorizontalAlignment="Left" Margin="16,42,0,0" VerticalAlignment="Top"/>
        <TextBox Name="AuthorID" HorizontalAlignment="Left" Height="23" Margin="98,45,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Title" HorizontalAlignment="Left" Margin="16,70,0,0" VerticalAlignment="Top"/>
        <TextBox  Name="Title" HorizontalAlignment="Left" Height="23" Margin="98,73,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="RealiseDate" HorizontalAlignment="Left" Margin="16,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.374,1.282"/>
        <TextBox  Name="RealiseDate" HorizontalAlignment="Left" Height="23" Margin="98,111,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120">MM.DD.YYYY</TextBox>
        <Button Content="AddBook" HorizontalAlignment="Left" Margin="67,145,0,0" VerticalAlignment="Top" Width="75" Click="Add"/>
        <TextBox Name="excep" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="16,184,0,0" VerticalAlignment="Top" Width="202" Height="56"/>
    </Grid>
</Window>
