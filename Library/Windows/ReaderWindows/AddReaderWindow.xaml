<Window x:Class="Library.Windows.ReaderWindows.AddReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows.ReaderWindows"
        mc:Ignorable="d"
        Title="AddReaderWindow" Height="226.25" Width="250">
    <Grid Margin="0,0,0,-1">

        <Label Content="FirstName" HorizontalAlignment="Left" Margin="16,14,0,0" VerticalAlignment="Top"/>
        <TextBox Name="FirstName" HorizontalAlignment="Left" Height="23" Margin="98,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="LastName" HorizontalAlignment="Left" Margin="16,42,0,0" VerticalAlignment="Top"/>
        <TextBox Name="LastName" HorizontalAlignment="Left" Height="23" Margin="98,45,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="BirthDay" HorizontalAlignment="Left" Margin="16,70,0,0" VerticalAlignment="Top"/>
        <TextBox  Name="BirthDay" HorizontalAlignment="Left" Height="23" Margin="98,73,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120">MM.DD.YYYY</TextBox>
        <Button Content="Add" HorizontalAlignment="Left" Margin="98,101,0,0" VerticalAlignment="Top" Width="75" Click="Add"/>
        <TextBox Name="excep" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="16,126,0,0" VerticalAlignment="Top" Width="202" Height="56"/>
    </Grid>
</Window>
