<Window x:Class="Library.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="EditWindow" Height="220" Width="250">
    <Grid>
        <Label  Content="Id" HorizontalAlignment="Left" Margin="11,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Id" HorizontalAlignment="Left" Height="23" Margin="93,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.524,0.795"/>
        <Label Content="FirstName" HorizontalAlignment="Left" Margin="11,36,0,0" VerticalAlignment="Top"/>
        <TextBox Name="FirstName" HorizontalAlignment="Left" Height="23" Margin="93,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="LastName" HorizontalAlignment="Left" Margin="11,64,0,0" VerticalAlignment="Top"/>
        <TextBox Name="LastName" HorizontalAlignment="Left" Height="23" Margin="93,67,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="BirthDay" HorizontalAlignment="Left" Margin="11,92,0,0" VerticalAlignment="Top"/>
        <TextBox  Name="BirthDay" HorizontalAlignment="Left" Height="23" Margin="93,95,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="93,123,0,0" VerticalAlignment="Top" Width="75" Click="Edit"/>
        

    </Grid>
</Window>
